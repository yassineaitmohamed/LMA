{
  "library": {
    "default_path": "~/Desktop/LMA/articles",
    "database_path": "~/Desktop/LMA/data/articles.db",
    "auto_index": true,
    "auto_cleanup": true
  },
  "reader": {
    "cache_size": 15,
    "preload_pages": 2,
    "default_theme": "dark",
    "default_zoom": 1.0,
    "smooth_scrolling": true,
    "enable_thumbnails": true
  },
  "interface": {
    "theme": "dark",
    "window_size": [1400, 900],
    "show_toolbar": true,
    "show_statusbar": true,
    "language": "en"
  },
  "annotations": {
    "auto_save": true,
    "default_highlight_color": "yellow",
    "show_author": true,
    "timestamp_format": "%Y-%m-%d %H:%M"
  },
  "search": {
    "case_sensitive": false,
    "whole_words": false,
    "regex_enabled": false,
    "max_results": 100
  },
  "performance": {
    "enable_cache": true,
    "enable_preload": true,
    "max_memory_mb": 500,
    "background_threads": 2
  },
  "export": {
    "default_format": "markdown",
    "include_metadata": true,
    "include_annotations": true,
    "include_toc": false
  },
  "shortcuts": {
    "next_page": "Right",
    "prev_page": "Left",
    "search": "Ctrl+F",
    "bookmark": "Ctrl+B",
    "highlight": "Ctrl+H",
    "note": "Ctrl+N",
    "theme": "Ctrl+T",
    "export": "Ctrl+E",
    "quit": "Ctrl+Q"
  },
  "advanced": {
    "debug_mode": false,
    "log_level": "INFO",
    "backup_annotations": true,
    "check_updates": true
  }
}
